<%= form_with(model: ticket) do |form| %> 
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
        <% @ticket.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, autofocus: true, required: true, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_field :body, required: true, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :project_id, "Project" %>
      <%= form.select :project_id, options_from_collection_for_select(Project.all, :id, :name) %>
    </div>

    <div class="field">
      <%= form.label :status %>
      <%= form.select :status, options_for_select(Ticket::STATUS, @ticket.status) %>
    </div>

    <br/>
    <div class="actions">
      <%= form.submit class: "btn btn-success" %>
    </div>
  </div>
<% end %>
