<%= render 'errors', obj: @project %>
<%= form_with(model: project) do |form| %>
  <div class="form-group">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, autofocus: true, required: true, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_field :description, required: true, class: "form-control" %>
    </div>

    <br/>
    <%= form.submit (@project.new_record? ? 'Add new project' : 'Update project'), class: 'btn btn-success' %>
  </div>
<% end %>
